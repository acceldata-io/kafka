# Home dir
KAFKA_HOME=/usr/odp/current/kafka-broker/
# kafka env script
. $KAFKA_HOME/config/kafka-env.sh
#Kafka PID
PID=0

# Start, stop, status, clean or setup
KAFKA_LAUNCH_COMMAND=$1

# User Name for setup parameter
KAFKA_USER=kafka


#App name
SERVICE_NAME=kafka
APP_NAME=kafka-mirrormaker

#The Kafka's broker
num_streams=$(grep -Po '(?<=num\.streams=)\d+' "$KAFKA_HOME/config/mirrormaker-source.properties")
whitelist=$(grep -Po '(?<=whitelist=).*' "$KAFKA_HOME/config/mirrormaker-source.properties")
source_cluster_props=$KAFKA_HOME/conf/mirrormaker-source.properties
destination_cluster_props=$KAFKA_HOME/conf/mirrormaker-destination.properties
KAFKA_MIRRORMAKER_CMD="$KAFKA_HOME/bin/kafka-mirror-maker.sh --consumer.config $source_cluster_props --producer.config      $destination_cluster_props --num.streams $num_streams --whitelist='$whitelist'"
#PID & LOG DIRs

[ -z $PID_DIR ] && PID_DIR="/var/run/$SERVICE_NAME"
[ -z $LOG_DIR ] && LOG_DIR="/var/log/$SERVICE_NAME"

#Name of PID file
PID_FILE="$PID_DIR/$APP_NAME.pid"

#Name of LOG ERR file
ERR_FILE="$LOG_DIR/$APP_NAME.err"

[ -z $MAX_WAIT_TIME ] && MAX_WAIT_TIME=120

function main {
   case "$1" in
      start)
         kafkaStart
         ;;
      stop)
         kafkaStop
         ;;
      status)
         kafkaStatus
         ;;
      clean)
         kafkaClean
         ;;
      *)
         printf "Usage: $0 {start|stop|status|clean}\n"
         ;;
   esac
}

function kafkaStart {

   getPID
   kafkaMMIsRunning $PID
   if [ $? -eq 1 ]; then
     printf "Kafka is already running with PID=$PID.\n"
     exit 0
   fi

   printf "Starting Kafka MM"

   rm -f $PID_FILE
   nohup $KAFKA_MIRRORMAKER_CMD >>/dev/null 2>>$ERR_FILE & echo $! > $PID_FILE

   getPID
   kafkaMMIsRunning $PID
   if [ $? -ne 1 ]; then
      printf "failed.\n"
      exit 1
   fi

   printf "succeeded with PID=$PID.\n"
   return 0
}

function kafkaStop {
   getPID
   kafkaMMIsRunning $PID
   if [ $? -eq 0 ]; then
     printf "Kafka MM is not running.\n"
     rm -f $PID_FILE
     return 0
   fi

   printf "Stopping Kafka MM [$PID] "
   kafkaKill $PID >>/dev/null 2>>$ERR_FILE

   if [ $? -ne 0 ]; then
     printf "failed. \n"
     exit 1
   else
     rm -f $PID_FILE
     printf "succeeded.\n"
     return 0
   fi
}

function kafkaStatus {
   printf "Kafka MM "
   getPID
   if [ $? -eq 1 ]; then
     printf "is not running. No pid file found.\n"
     return 0
   fi

   kafkaMMIsRunning $PID
   if [ $? -eq 1 ]; then
     printf "is running with PID=$PID.\n"
     exit 1
   else
     printf "is not running.\n"
     return 0
   fi
}

# Removed the Kafka PID file if Kafka is not run
function kafkaClean {
   getPID
   kafkaMMIsRunning $PID
   if [ $? -eq 0 ]; then
     deleteLogFiles
     return 0
   else
     printf "Can't clean files.  Kafka MM is running with PID=$PID.\n"
     exit 1
   fi
}

# Returns 0 if the Knox is running and sets the $PID variable.
function getPID {
   if [ ! -d $PID_DIR ]; then
      printf "Can't find pid dir.\n"
      exit 1
   fi
   if [ ! -f $PID_FILE ]; then
     PID=0
     return 1
   fi

   PID="$(<$PID_FILE)"
   return 0
}

function kafkaMMIsRunning {
   if [ $1 -eq 0 ]; then return 0; fi

   ps -p $1 > /dev/null

   if [ $? -eq 1 ]; then
     return 0
   else
     return 1
   fi
}

function kafkaKill {
   local localPID=$1
   kill $localPID || return 1
   for ((i=0; i<MAX_WAIT_TIME; i++)); do
      kafkaMMIsRunning $localPID
      if [ $? -eq 0 ]; then return 0; fi
      sleep 1
   done

   kill -s KILL $localPID || return 1
   for ((i=0; i<MAX_WAIT_TIME; i++)); do
      kafkaMMIsRunning $localPID
      if [ $? -eq 0 ]; then return 0; fi
      sleep 1
   done

   return 1
}

function createLogFiles {
   if [ ! -d "$LOG_DIR" ]; then
      printf "Can't find log dir.  Run sudo $0 setup.\n"
      exit 1
   fi
   if [ ! -f "$OUT_FILE" ]; then touch $OUT_FILE; fi
   if [ ! -f "$ERR_FILE" ]; then touch $ERR_FILE; fi
}

function deleteLogFiles {
     rm -f $PID_FILE
     printf "Removed the Kafka MM PID file: $PID_FILE.\n"

     rm -f $OUT_FILE
     printf "Removed the Kafka MM OUT file: $OUT_FILE.\n"

     rm -f $ERR_FILE
     printf "Removed the Kafka MM ERR file: $ERR_FILE.\n"
}

#Starting main
main $KAFKA_LAUNCH_COMMAND